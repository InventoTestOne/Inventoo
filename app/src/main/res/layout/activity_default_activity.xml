<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/default_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.invento.somesh.invento2k17.MainActivity">




  <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">


        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="INVENTO2K17" />

        <ImageButton
            android:id="@+id/scheduleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            app:srcCompat="@drawable/schedule1" />

        <ImageButton
            android:id="@+id/eventsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            android:layout_marginStart="8dp"
            android:background="@null"
            app:layout_constraintLeft_toRightOf="@+id/scheduleButton"
            app:layout_constraintTop_toTopOf="@+id/scheduleButton"
            app:srcCompat="@drawable/events"
            app:layout_constraintBottom_toBottomOf="@+id/scheduleButton"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="@+id/scheduleButton"
            app:layout_constraintTop_toBottomOf="@+id/scheduleButton"
            app:srcCompat="@drawable/contacts" />

        <ImageButton
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:srcCompat="@drawable/register"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton3" />

        <ImageButton
            android:id="@+id/notificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:layout_constraintLeft_toRightOf="@+id/imageButton3"
            app:srcCompat="@drawable/notification"
            app:layout_constraintTop_toTopOf="@+id/imageButton3"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:srcCompat="@drawable/maps"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/registerButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/registerButton" />




        <ImageButton
            android:id="@+id/log_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@+id/imageButton7"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sponsors"
            android:id="@+id/sponsersButton"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@+id/registerButton"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/deveoplers"
            android:id="@+id/imageButton7"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="@+id/mapButton"
            app:layout_constraintTop_toTopOf="@+id/sponsersButton" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:scrollbars="none"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="178dp"
                    android:layout_marginLeft="8dp"
                    android:cropToPadding="false"
                    android:src="@drawable/slider1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="366dp"
                    android:layout_height="178dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/slider2" />

                <ImageView
                    android:layout_width="366dp"
                    android:layout_height="178dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/slider3" />

                <ImageView
                    android:layout_width="366dp"
                    android:layout_height="178dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/slider1" />

            </LinearLayout>

        </HorizontalScrollView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>